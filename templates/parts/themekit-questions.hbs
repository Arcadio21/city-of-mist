<div class="{{tagtype}}-questions">
	<h1 class="header"> {{tagtype}} tags
		<a class="tk-create-{{tagtype}}-tag" data-distinct="true" data-tag-type="{{tagtype}}_questions" data-item-type="themebook" data-duplicates="false" data-actor-id={{actor.id}}> <i class="fas fa-plus-square"></i></a>
	</h1>
	{{#each tagList as |tag ind|}}
	{{#if ../item.system.themebook_name}}
	<span>Question</span>
	<div class="question">
		{{tag.letter}}
		{{getTBQuestion ../item.themebook tag.letter "power"}}
	</div>
	{{/if}}
	<div class="tk-tag">
		<a class="tk-delete-{{../tagtype}}-tag" title="Delete Item" data-index="{{ind}}"><i class="fas fa-trash"></i></a>
		<input class="tk-tagname-entry" name="data.{{../tagtype}}_tags.{{ind}}.name" type="text" value="{{tag.name}}" placeholder=""/>
		<input class="tk-tagname-description" name="data.{{../tagtype}}_tags.{{ind}}.description" type="text" value="{{tag.description}}" placeholder=""/>
	</div>
</div>
{{/each}}

